@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Entry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Entry.Description" class="control-label"></label>
                <input asp-for="Entry.Description" class="form-control" />
                <span asp-validation-for="Entry.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Entry.Type" class="control-label"></label>
                <select asp-for="Entry.Type" class="form-control" asp-items="@(ViewData["EntryTypeList"] as IEnumerable<SelectListItem>)"></select>
                <span asp-validation-for="Entry.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Entry.Medicine" class="control-label"></label>
                <input asp-for="Entry.Medicine" class="form-control" />
                <span asp-validation-for="Entry.Medicine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Entry.Length" class="control-label"></label>
                <input asp-for="Entry.Length" class="form-control" />
                <span asp-validation-for="Entry.Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Entry.HistoryId" class="control-label"></label>
                <select asp-for="Entry.HistoryId" class ="form-control" asp-items="ViewBag.HistoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Entry.TreatmentId" class="control-label"></label>
                <select asp-for="Entry.TreatmentId" class ="form-control" asp-items="ViewBag.TreatmentId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

