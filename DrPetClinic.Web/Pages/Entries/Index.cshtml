@model DrPetClinic.Web.Pages.Entries.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Entry[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entry[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entry[0].Medicine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entry[0].Length)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entry[0].History)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entry[0].Treatment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Entry) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medicine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.History.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Treatment.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
