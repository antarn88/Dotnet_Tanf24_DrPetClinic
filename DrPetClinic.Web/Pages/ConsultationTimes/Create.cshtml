@page
@model DrPetClinic.Web.Pages.ConsultationTimes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ConsultationTime</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ConsultationTime.DayOfWeek" class="control-label"></label>
                <select asp-for="ConsultationTime.DayOfWeek" class="form-control" asp-items="@(ViewData["DayOfWeekList"] as IEnumerable<SelectListItem>)"></select>
                <span asp-validation-for="ConsultationTime.DayOfWeek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConsultationTime.StartTime" class="control-label"></label>
                <input asp-for="ConsultationTime.StartTime" class="form-control" />
                <span asp-validation-for="ConsultationTime.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConsultationTime.EndTime" class="control-label"></label>
                <input asp-for="ConsultationTime.EndTime" class="form-control" />
                <span asp-validation-for="ConsultationTime.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ConsultationTime.IsAvailable" /> @Html.DisplayNameFor(model => model.ConsultationTime.IsAvailable)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ConsultationTime.Description" class="control-label"></label>
                <input asp-for="ConsultationTime.Description" class="form-control" />
                <span asp-validation-for="ConsultationTime.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConsultationTime.EmployeeId" class="control-label"></label>
                <select asp-for="ConsultationTime.EmployeeId" class ="form-control" asp-items="ViewBag.EmployeeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
