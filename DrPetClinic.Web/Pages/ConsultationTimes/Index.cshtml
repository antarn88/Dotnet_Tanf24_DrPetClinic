    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ConsultationTime[0].DayOfWeek)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConsultationTime[0].StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConsultationTime[0].EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConsultationTime[0].IsAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConsultationTime[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConsultationTime[0].Employee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ConsultationTime) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DayOfWeek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAvailable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
