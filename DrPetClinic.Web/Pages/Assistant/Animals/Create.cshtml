@page "/Asszisztens/Allatok/Create"
@model DrPetClinic.Web.Pages.Assistant.Animals.CreateModel
@{
  ViewData["Title"] = "Új állat létrehozása";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
  <div asp-validation-summary="All" class="text-danger"></div>

  <!-- Állat neve -->
  <div class="mb-3">
    <label asp-for="Animal.Name" class="form-label">Állat neve</label>
    <input asp-for="Animal.Name" class="form-control" />
    <span asp-validation-for="Animal.Name" class="text-danger"></span>
  </div>

  <!-- Fajtája -->
  <div class="mb-3">
    <label asp-for="Animal.Species" class="form-label">Fajtája</label>
    <input asp-for="Animal.Species" class="form-control" />
    <span asp-validation-for="Animal.Species" class="text-danger"></span>
  </div>

  <!-- Típusa -->
  <div class="mb-3">
    <label asp-for="Animal.Type" class="form-label">Típusa</label>
    <input asp-for="Animal.Type" class="form-control" />
    <span asp-validation-for="Animal.Type" class="text-danger"></span>
  </div>

  <!-- Születési dátum -->
  <div class="mb-3">
    <label asp-for="Animal.BirthDate" class="form-label">Születési dátum</label>
    <input asp-for="Animal.BirthDate" type="date" class="form-control" />
    <span asp-validation-for="Animal.BirthDate" class="text-danger"></span>
  </div>

  <!-- Státusza -->
  <div class="mb-3">
    <label asp-for="Animal.Status" class="form-label">Státusza</label>
    <input asp-for="Animal.Status" class="form-control" />
    <span asp-validation-for="Animal.Status" class="text-danger"></span>
  </div>

  <!-- Tulajdonos neve -->
  <div class="mb-3">
    <label asp-for="SelectedOwnerId" class="form-label">Tulajdonos neve</label>
    <select asp-for="SelectedOwnerId" class="form-select" asp-items="Model.OwnerList"></select>
    <span asp-validation-for="SelectedOwnerId" class="text-danger"></span>
  </div>

  <!-- Leírás -->
  <div class="mb-3">
    <label asp-for="Animal.Description" class="form-label">Leírás</label>
    <textarea asp-for="Animal.Description" class="form-control"></textarea>
    <span asp-validation-for="Animal.Description" class="text-danger"></span>
  </div>

  <button type="submit" class="btn btn-primary">Létrehozás</button>
  <a class="btn btn-secondary" asp-page="/Assistant/Animals/Index">Mégse</a>
</form>
