@model Dictionary<string, List<DrPetClinic.Bll.DTOs.ConsultationTimeDto>>
@using DrPetClinic.Bll.Helpers

<h2 class="mt-4 text-center">Aktuális Heti Rendelési Idők</h2>

<table class="table table-striped table-hover table-bordered consultation-times-weekly-table mt-5">
    <thead>
        <tr>
            <th>Orvos</th>
            <th>Év</th>
            <th>Hét</th>
            <th>Rendelési Idők</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center">A megadott hétre nincsenek megjeleníthető rendelések.</td>
            </tr>
        }
        else
        {
            @foreach (var group in Model)
            {
                <tr>
                    <td>@group.Key</td>
                    <td>@group.Value.First().Year</td>
                    <td>@group.Value.First().Week</td>
                    <td>@Html.Raw(DateHelper.FormatDailyConsultationTimes(group.Value))</td>
                </tr>
            }
        }
    </tbody>
</table>
