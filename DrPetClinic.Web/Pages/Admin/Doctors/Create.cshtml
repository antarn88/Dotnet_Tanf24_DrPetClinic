@page "/Admin/Doktorok/Create"
@model DrPetClinic.Web.Pages.Admin.Doctors.CreateModel
@{
  ViewData["Title"] = "Orvos létrehozása";
}

<h1 class="text-center">Orvos létrehozása</h1>

<div class="container">
  <form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- Név -->
    <div class="row mb-3">
      <div class="col-6">
        <label asp-for="Doctor.Name" class="form-label">Név</label>
        <input asp-for="Doctor.Name" class="form-control" />
        <span asp-validation-for="Doctor.Name" class="text-danger"></span>
      </div>
    </div>

    <!-- Leírás -->
    <div class="row mb-3">
      <div class="col-6">
        <label asp-for="Doctor.Description" class="form-label">Leírás</label>
        <textarea asp-for="Doctor.Description" class="form-control"></textarea>
        <span asp-validation-for="Doctor.Description" class="text-danger"></span>
      </div>
    </div>

    <!-- Gombok -->
    <div class="row mt-3">
      <div class="col-6">
        <a class="btn btn-outline-secondary" asp-page="/Admin/Doctors/Index">Vissza</a>
        <button type="submit" class="btn btn-outline-primary">Létrehozás</button>
      </div>
    </div>
  </form>
</div>
